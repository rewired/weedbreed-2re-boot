{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["node", "vite/client"],
    "baseUrl": "../../",
    "paths": {
      "@ui/*": ["packages/ui/src/*"],
      "@wb/transport-sio": ["packages/transport-sio/src/index.ts"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "vite.config.ts",
    "tailwind.config.ts",
    "postcss.config.mjs"
  ],
  "exclude": ["dist", "node_modules"]
}
