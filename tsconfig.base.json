{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": true,
    "lib": ["ES2022"],
    "types": ["vitest/importMeta", "node"],
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@/": ["./src/"],
      "@/*": ["./src/*"]
    }
  },
  "include": []
}
